ode.com/posts/1')\n\u003C/script>\n\n\u003Ctemplate>\n  \u003Cdiv>\n    \u003Ch1>{{ data.title }}\u003C/h1>\n    \u003Cp>{{ data.body }}\u003C/p>\n  \u003C/div>\n\u003C/template>\n",[67,298,299,311,341,349,355,363,371,384,397,406],{"__ignoreMap":65},[70,300,301,303,306,309],{"class":72,"line":73},[70,302,209],{"class":208},[70,304,305],{"class":212},"script",[70,307,308],{"class":76}," setup",[70,310,216],{"class":208},[70,312,313,317,320,323,326,329,332,335,338],{"class":72,"line":90},[70,314,316],{"class":315},"scLti","const",[70,318,319],{"class":208}," { ",[70,321,322],{"class":93},"data",[70,324,325],{"class":208}," } ",[70,327,328],{"class":315},"=",[70,330,331],{"class":76}," useFetch",[70,333,334],{"class":208},"(",[70,336,337],{"class":80},"'https://jsonplaceholder.typicode.com/posts/1'",[70,339,340],{"class":208},")\n",[70,342,343,345,347],{"class":72,"line":99},[70,344,267],{"class":208},[70,346,305],{"class":212},[70,348,216],{"class":208},[70,350,351],{"class":72,"line":108},[70,352,354],{"emptyLinePlaceholder":353},true,"\n",[70,356,357,359,361],{"class":72,"line":160},[70,358,209],{"class":208},[70,360,213],{"class":212},[70,362,216],{"class":208},[70,364,365,367,369],{"class":72,"line":166},[70,366,221],{"class":208},[70,368,224],{"class":212},[70,370,216],{"class":208},[70,372,373,375,377,380,382],{"class":72,"line":172},[70,374,231],{"class":208},[70,376,10],{"class":212},[70,378,379],{"class":208},">{{ data.title }}\u003C/",[70,381,10],{"class":212},[70,383,216],{"class":208},[70,385,386,388,390,393,395],{"class":72,"line":178},[70,387,231],{"class":208},[70,389,15],{"class":212},[70,391,392],{"class":208},">{{ data.body }}\u003C/",[70,394,15],{"class":212},[70,396,216],{"class":208},[70,398,400,402,404],{"class":72,"line":399},9,[70,401,258],{"class":208},[70,403,224],{"class":212},[70,405,216],{"class":208},[70,407,409,411,413],{"class":72,"line":408},10,[70,410,267],{"class":208},[70,412,213],{"class":212},[70,414,216],{"class":208},[19,416,418